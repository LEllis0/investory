<p class="allocationHighlight">
    Allocation
</p>
<div>
    <canvas id="weighting_chart" width="225" height="225"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const data = <%-JSON.stringify(assets_data)%>;

    // Process the data to be used in the chart
    const assetLabels = data.map(asset => asset.ticker);
    const assetValues = data.map(asset => asset.weighting);

    // Create the half-donut chart
    const ctx = document.getElementById('weighting_chart').getContext('2d');
    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: assetLabels,
            datasets: [{
                label: 'Asset Allocation',
                data: assetValues,
                backgroundColor: [
                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'
                ],
                hoverBackgroundColor: [
                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40'
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                }
            },
            rotation: 270,
            circumference: 180 
        }
    });
</script>
